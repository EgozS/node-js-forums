<html>
  <head>
    <title>Register</title>
    <link rel="stylesheet" href="../../../css/index.css" type="text/css" />
  </head>
  <body>
    <a id="top" href="/"><button class="btnT">Cancel</button></a>
    <div class="register-wrapper" style="padding: 42px 19px">
      <h1>Register</h1>
      <p id="error"><%= msg %></p>
      <form action="/register" method="POST">
        <p>
          <input
            type="text"
            name="username"
            id="username"
            placeholder="username"
            autocomplete="off "
            required
          />
        </p>
        <p>
          <input
            type="text"
            name="email"
            id="email"
            placeholder="Email"
            pattern="/(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*|"(?:[\x01-\x08\x0b\x0c\x0e-\x1f\x21\x23-\x5b\x5d-\x7f]|
            \\[\x01-\x09\x0b\x0c\x0e-\x7f])*")@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|
            \[(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?|[a-z0-9-]*[a-z0-9]:
            (?:[\x01-\x08\x0b\x0c\x0e-\x1f\x21-\x5a\x53-\x7f]|\\[\x01-\x09\x0b\x0c\x0e-\x7f])+)\])/"
            required
          />
        </p>
        <p>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="password"
            required
          />
        </p>
        <p>
          <input type="submit" value="Register" id="btn" />
        </p>
      </form>
      <p class="redirect-login-text">
        Already have an account?<a href="login"><span> Login</span></a>
      </p>
    </div>
  </body>
</html>
