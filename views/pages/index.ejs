<html>
  <head>
    <title>StackAe</title>
    <link rel="stylesheet" href="../../css/index.css"/>
    <link rel="stylesheet" href="../../css/dropdown.css"/>
  </head>
  <body>
    <div class="header">
      <div>
        <a id="top" href="/login"><button class="btnT">login</button></a>
      </div>
      <div class = "dropdown">
        
        <button class="btnTD">Logged in as <%= username %></button>
        <div class="dropdown-content">
          <a id="user" href="/panel">Panel</a>
          <form action="/logout" method="post"><input type = "submit" id = "usert" value = "logout"></form>
        </div>
      </div>
    </div>

    <div class="content">
      <h1>Welcome to <%= forumname %> </h1>
      <p style="color:#ff3333"><%= msg %></p>
      <div class="post-textarea">
        <% if(tables.length <= 0) { %>
          <textarea placeholder="Something on your mind...?" id = "textareaMain"></textarea>
        <% } else { %>
        <% for(var i = 0; i < tables.length; i++) { %>
          <div class="card">
            <div class="card-title">
              <h2><%= tables[i].rawname %></h2>
            </div>
            <div class="card-content">
              <a href= "<%= tables[i].url %>">Click here to view post</a>
              <p>Published by <%= tables[i].creator %></p>
            </div>
        </div>        
          <% } %>
        <% } %>
      </div>
      <div class="ask-button-container">
        <a id="top" href="/createpost">
          <button id="btnE">Ask a question</button>
        </a>
      </div>
    </div>
  </body>
</html>
